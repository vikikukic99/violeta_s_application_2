modules = ["web", "nodejs-20", "swift-5.8", "dart-3.8", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter", "nodejs"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 36119
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Flutter Web Dev"
author = 46532033
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter pub get"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter run -d web-server --web-port=5000 --web-hostname=0.0.0.0 --debug"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web App"

[[workflows.workflow]]
name = "Flutter Web App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000 -d build/web"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "npm install -g serve && serve -s build/web -l $PORT"]
build = ["flutter", "build", "web", "--release"]
